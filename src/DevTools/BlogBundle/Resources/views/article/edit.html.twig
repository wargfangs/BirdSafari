{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modifier un article</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        {% if article.image %}
        <input type="checkbox" id="keepPic" class="validationRequired" name="keep" checked="checked">Garder l'ancienne image?</input>
        <img class="col-xs-12" id="oldPic" src="{{ asset(article.image.src) }}" alt="{{ article.image.alt }}"><br>
        {% endif %}
        <input type="submit" value="Valider" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('article_index') }}">Retour Ã  la liste d'articles</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
